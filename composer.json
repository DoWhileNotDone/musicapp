{
    "name": "davegthemighty/musicapp",
    "description": "Slim 3 API using Mololog, Eloquent and Basic Auth",
    "type": "project",
    "keywords": [
        "slim",
        "music",
        "api",
        "skeleton"
    ],
    "authors": [
        {
            "name": "Dave Gillard",
            "email": "davegthemighty@hotmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "illuminate/database": "~5.1",
        "monolog/monolog": "^1.17",
        "rakit/validation": "^1.1",
        "robmorgan/phinx": "^0.9.2",
        "slim/slim": "^3.9",
        "tuupola/slim-basic-auth": "^3.2",
        "vlucas/phpdotenv": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MusicApp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MusicApp\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "overtrue/phplint": "^1.0",
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^7.3",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public",
        "test": "phpunit"
    }
}
